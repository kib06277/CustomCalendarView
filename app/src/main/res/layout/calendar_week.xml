<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/daysContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:tag="dayOfTheWeekLayout1"
        android:layout_margin="@dimen/distance_3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:tag="dayOfTheWeekText1"
            tools:text="Tue"
            android:textColor="@color/white"
            android:textSize="@dimen/txtsize_18"
            android:background="@color/FF16461b"
            android:layout_marginTop="@dimen/distance_5"
            android:layout_marginBottom="@dimen/distance_5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:tag="dayOfTheWeekLayout2"
        android:layout_margin="@dimen/distance_3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:tag="dayOfTheWeekText2"
            tools:text="Wed"
            android:textColor="@color/white"
            android:textSize="@dimen/txtsize_18"
            android:background="@color/FF16461b"
            android:layout_marginTop="@dimen/distance_5"
            android:layout_marginBottom="@dimen/distance_5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:tag="dayOfTheWeekLayout3"
        android:layout_margin="@dimen/distance_3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:tag="dayOfTheWeekText3"
        tools:text="Thu"
        android:textColor="@color/white"
        android:textSize="@dimen/txtsize_18"
        android:background="@color/FF16461b"
        android:layout_marginTop="@dimen/distance_5"
        android:layout_marginBottom="@dimen/distance_5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:tag="dayOfTheWeekLayout4"
        android:layout_margin="@dimen/distance_3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:tag="dayOfTheWeekText4"
            tools:text="Fri"
            android:textColor="@color/white"
            android:textSize="@dimen/txtsize_18"
            android:background="@color/FF16461b"
            android:layout_marginTop="@dimen/distance_5"
            android:layout_marginBottom="@dimen/distance_5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/distance_3"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:tag="dayOfTheWeekLayout5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/FF16461b"
            android:gravity="center"
            android:tag="dayOfTheWeekText5"
            android:textColor="@color/white"
            android:textSize="@dimen/txtsize_18"
            tools:text="Sat"
            android:layout_marginTop="@dimen/distance_5"
            android:layout_marginBottom="@dimen/distance_5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:tag="dayOfTheWeekLayout6"
        android:layout_margin="@dimen/distance_3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:tag="dayOfTheWeekText6"
            tools:text="Sun"
            android:textColor="@color/white"
            android:textSize="@dimen/txtsize_18"
            android:background="@color/FF16461b"
            android:layout_marginTop="@dimen/distance_5"
            android:layout_marginBottom="@dimen/distance_5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:tag="dayOfTheWeekLayout7"
        android:layout_margin="@dimen/distance_3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:tag="dayOfTheWeekText7"
            tools:text="Mon"
            android:textColor="@color/white"
            android:textSize="@dimen/txtsize_18"
            android:background="@color/FF16461b"
            android:layout_marginTop="@dimen/distance_5"
            android:layout_marginBottom="@dimen/distance_5"/>

    </LinearLayout>

</LinearLayout>